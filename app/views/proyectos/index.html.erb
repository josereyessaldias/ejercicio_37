<h1>Proyectos</h1>

<table class="table">
	<thead> 
		<td>Nombre</td>
		<td>Personas asociados</td>
	</thead>
	<% @proyectos.each do |proyecto| %>
		<tr>
			<td><%= link_to 'Eliminar', proyecto_path(proyecto), method: :delete, :class => 'btn btn-sm btn-danger' %>
				<%= link_to 'Editar', edit_proyecto_path(proyecto), :class => 'btn btn-sm btn-success' %>
				<%= proyecto.nombre %>
			</td>
			<td>
				<% proyecto.personas.each do |persona| %>
					<%= persona.name %>
					|
				<% end %>
			</td>
			
		</tr>
	<% end %>

</table>
<br>
<h3>Agregar Proyecto</h3>

<%= form_with(model: @proyecto, local: true) do |form| %>

  <div class="field">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>